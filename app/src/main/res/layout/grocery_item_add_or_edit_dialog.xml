<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2196F3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/containerAddItemDialog"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/firstCardViewwAddItemDialog"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/itemNameAddItemDialog"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@null"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/firstCardViewwAddItemDialog"
            android:layout_marginEnd="10dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/secondCardViewAddItemDialog"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/minPriceAddItemDialog"
                android:inputType="number"
                android:textColor="#000"
                android:background="@null"
                android:textSize="15sp"
                />
        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/secondTextViewAddItemDialog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/secondCardViewAddItemDialog"
                android:layout_marginEnd="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/thirdCardViewAddItemDialog"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <EditText
           android:layout_width="250dp"
           android:layout_height="match_parent"
           android:id="@+id/maxPriceAddItemDialog"
           android:inputType="number"
           android:textColor="#000"
           android:textSize="15sp"
           android:background="@null"/>
        </androidx.cardview.widget.CardView>
        <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:id="@+id/thirdTextViewAddItemDialog"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/thirdCardViewAddItemDialog"
         android:layout_marginEnd="10dp"
         />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

<Button
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:id="@+id/addOrEditAddItemDialog"
    android:text="Done"
    android:textAllCaps="false"
    android:textColor="@color/black"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/containerAddItemDialog"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/white_rounded_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>