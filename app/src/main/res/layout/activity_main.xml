<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wallpaper">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/groceriesMenuCard"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/trainingProgramCard"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/fullyTransarent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addFragmentTview"
                android:text="Groceries menus"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/davidlibre"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/trainingProgramCard"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bmrCalculatorCard"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/fullyTransarent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainingProgramTview"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/davidlibre"
            android:text="Training programs"
            android:layout_gravity="center"
         />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/bmrCalculatorCard"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/fullyTransarent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmrCalculatorTview"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/davidlibre"
                android:layout_gravity="center"
                android:text="Bmr calculator"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>