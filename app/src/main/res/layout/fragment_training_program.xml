<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.GroceriesFragment"
    android:background="#ffff"
    android:clickable="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/programNameTrainingProgramFragment"
        android:textColor="@color/black"
        android:fontFamily="@font/davidlibre"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="New Program"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/immutableExercisesListTrainingProgramFragment"
        android:background="@drawable/ic_menu_black"
        app:layout_constraintBottom_toBottomOf="@id/programNameTrainingProgramFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewTrainingProgramFragment"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/saveBtnTrainingProgramFragment"
        android:background="@drawable/blue_save_rounded_button"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/addExerciseBtnTrainingProgramFragment"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addExerciseBtnTrainingProgramFragment"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_plus_rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>