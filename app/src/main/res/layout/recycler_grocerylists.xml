<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/mainCardViewRcyclerGroceryLists"
         android:layout_centerInParent="true"
         app:cardBackgroundColor="#ffff"
         app:cardUseCompatPadding="true"
         app:cardElevation="3dp"
       >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
     <TextView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="0.9"
         android:id="@+id/listNameTviewRecyclerGroceryLists"
         android:layout_gravity="center"
         android:textAlignment="center"
         android:textColor="@color/black"
         android:fontFamily="@font/mplusrounded1"
         android:textSize="15sp" />
     <Button
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="0.09"
         android:id="@+id/deleteBtnrRcyclerGroceryLists"
         android:layout_gravity="right|center"
         android:background="@drawable/ic_delete_red"/>
</LinearLayout>

     </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>